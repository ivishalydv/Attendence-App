<% include ./partials/header%>


<div class="container register">
    <div class="row">
        <div class="col-12 col-sm-12 col-lg-3 register-left">
            <img src="images/bean.gif" alt=""/>
            <h3>Subject</h3>
            <p>Make a new Subject</p>
        </div>
        <div class="col-12 col-sm-12 col-lg-9 register-right">
            <form class="row register-form" action="/subject" method="POST">
                <div class="col-12 col-sm-12 col-lg-6">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Subject Name *" name="subject[name]" value="" />
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Teacher Name *" value="" name="subject[teacher]" />
                    </div>  
                </div>
                <div class="col-12 col-sm-12 col-lg-6">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Days Present *" value="" name="subject[present]" />
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Total Classes *" value="" name="subject[total]"/>
                    </div>
                    <input type="submit" class="btnRegister"  value="Create Subject"/>
                </div>
            </form>
        </div>
    </div>
</div>




</body>
</html>